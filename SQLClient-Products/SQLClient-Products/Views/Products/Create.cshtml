@model SQLClient_Products.Models.Product
@{
    ViewBag.Title = "Create";
}

<h2>Create New Product</h2>

@if (ViewBag.Error != null)
{
    <div class="warning">@ViewBag.Error</div>
}

<form action="@Url.Action("Create", "Products")" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required placeholder="Enter Name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="Description">Description of Item</label>
        <textarea name="Description" cols="@Model.Description"></textarea>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" class="form-control" id="Price" name="Price" required placeholder="Price" value="@Model.Price">
    </div>
    <div>    
        <input type="file" id="fileUpload" name="file" />
        <input type="submit" id="btnSubmit" value="Upload a File" />
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>

